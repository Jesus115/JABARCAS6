<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JAbarccaS6.Vistas.AgEmpleados"
             Title="AgEmpleados">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Agregar estudiante" FontSize="20" HorizontalTextAlignment="Center" />
        </StackLayout>

        <ScrollView Grid.Row="1">
            <StackLayout>
                <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre" />
                <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido" />
                <Entry x:Name="txtEdad" Placeholder="Ingrese la edad" MaxLength="3" Keyboard="Numeric" />
                <Button x:Name="btnGuardar" Text="Guardar estudiante" Clicked="btnGuardar_Clicked" />
            </StackLayout>
        </ScrollView>
    </Grid>
    </VerticalStackLayout>
</ContentPage>
